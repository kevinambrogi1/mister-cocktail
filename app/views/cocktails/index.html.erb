
<div class='title text-center'>
  <h1>Our cocktails</h1>
</div>



  <div class='wrapper'>
    <div class="container">
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-3">
          <%= cl_image_tag(cocktail.photo, width: 250, height: 250, crop: :fill) %>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <p>Number of ingredients: <%= cocktail.ingredients.size %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
